<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    
    
    <!-- Estilos para el action bar -->
    <style name="RedActionBarTheme"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
<!--         <item name="android:actionBarStyle">@style/RedActionBar</item> -->
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/RedActionBar</item>
    </style>
    
    
    <style name="RedActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse" >
        <item name="android:background">@color/red</item>
        <!-- Support library compatibility -->
        <item name="background">@color/red</item>
    </style>
    
    
    
    
    
    
    <style name="BlueActionBarTheme"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
<!--         <item name="android:actionBarStyle">@style/BlueActionBar</item> -->

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/BlueActionBar</item>
    </style>
    <style name="BlueActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse" >
        <item name="android:background">@color/blue</item>
        <!-- Support library compatibility -->
        <item name="background">@color/blue</item>
    </style>
    <style name="GreenActionBarTheme"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
<!--         <item name="android:actionBarStyle">@style/GreenActionBar</item> -->

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/GreenActionBar</item>
    </style>
    <style name="GreenActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse" >
        <item name="android:background">@color/green</item>
        <!-- Support library compatibility -->
        <item name="background">@color/green</item>
    </style>

</resources>
